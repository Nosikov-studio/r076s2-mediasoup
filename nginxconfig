server {
    listen 443 ssl;
    listen [::]:443 ssl;
    
    server_name truruki.ru www.truruki.ru;
    
    root /var/www/ws/public;  # корневая папка сайта — ваш публичный фронтенд
    index index.html index.htm;

    ssl_certificate /etc/letsencrypt/live/truruki.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/truruki.ru/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ecdh_curve auto;

    # Отдача статики из /public/
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Проксирование websocket/socket.io (если нужно)
    location /server/ {
        proxy_pass http://localhost:3000/server/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Можно добавить для .well-known (сертификаты)
    location /.well-known/acme-challenge/ {
        root /var/www/ws/public;
        try_files $uri =404;
    }
}